@model AdminBoard.Models.FuzzyGreenHouse.Set

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col">
        <div class="card w-75 mx-auto">
            <div>
                <h3 class="pt-4 text-center"> Edit fuzzy variable ID = @Model.SetID </h3>
                <form method="post" asp-controller="Variable" asp-action="Edit" class="p-4">
                    @*SetID*@
                    <input hidden type="text" asp-for="SetID" value=@Model.SetID>

                    @*Name*@
                    <div class="form-group">
                        <label for="nameInput">Name</label>
                        <input type="text" class="form-control" id="nameInput" placeholder="Enter fuzzy variable name" asp-for="Name">
                    </div>

                    @*Type*@
                    <div class="form-group">
                        <label for="typeSelect">Type</label>
                        <select class="form-control" id="typeSelect" asp-for="Type">
                            <option selected>Input</option>
                            <option>Output</option>
                        </select>
                    </div>

                    @*Save*@
                    <div class="form-group w-100 mx-auto">
                        <div class="input-group-addon text-center" id="buttons">
                            <button class="btn btn-outline-success" type="submit">Update</button>
                            <button class="btn btn-outline-warning" type="button" asp-controller="Variable" asp-action="Index">Back</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
