@model AdminBoard.Models.RuleViewModel

@{
    ViewData["Title"] = "Create";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<div class="row" id="edit">
    <div class="col">
        <div class="card w-75 mx-auto">
            <div>
                <h3 class="pt-4 text-center"> Create new fuzzy variable</h3>
                <form method="post" asp-controller="Rules" asp-action="Edit" class="p-4">
                    @*RuleID*@
                    <input type="hidden" asp-for="RuleID" />

                    @*Input1*@
                    <div class="form-group">
                        <label for="InputValue1Representation"> Select first input value: </label>
                        <select class="form-control" asp-for="InputValue1Representation" asp-items="Model.InputList1"></select>
                    </div>

                    @*Input2*@
                    <div class="form-group">
                        <label for="InputValue2Representation"> Select second input value: </label>
                        <select class="form-control" asp-for="InputValue2Representation" asp-items="Model.InputList2"></select>
                    </div>

                    @*Output*@
                    <div class="form-group">
                        <label for="OutputValueRepresentation"> Select output value: </label>
                        <select class="form-control" asp-for="OutputValueRepresentation" asp-items="Model.OutputList"></select>
                    </div>
                    @*Operator*@
                    <div class="form-group">
                        <label> Select operator: </label>
                        <select class="form-control" asp-for="Operator">
                            <option value="AND" selected> AND </option>
                            <option value="OR"> OR </option>
                        </select>
                    </div>

                    @*SelectSubsystem*@
                    <div class="form-group">
                        <label for="set">Select <i>subsystem</i> to assign <i>this rule</i> to</label>
                        <select class="form-control" asp-for="SubsystemRepresentation" asp-items="Model.SubsystemList"></select>
                    </div>

                    @*Save*@
                    <div class="form-group w-100 mx-auto">
                        <div class="input-group-addon text-center" id="buttons">
                            <button class="btn btn-outline-success" type="submit">Edit</button>
                            <a class="btn btn-outline-warning" href="@Url.Action("Index", "Rules")">Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $("#edit").ready(() => {
        $("#InputValue1Representation").val(@ViewBag.Input1);
        $("#InputValue2Representation").val(@ViewBag.Input2);
        $("#OutputValueRepresentation").val(@ViewBag.Output);
        $("#Operator").val("@ViewBag.Operator");
        $("#SubsystemRepresentation").val(@ViewBag.Subsystem);
    });
</script>