@model UserViewModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

@{
    Layout = "_LayoutProfile";
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-xl order-xl-1">
        <div class="card">
            <form asp-controller="Home" asp-action="Profile" method="POST">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Edit profile </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">
                        User information
                    </h6>
                    <div class="pl-lg-4">
                        @* Update was ok *@
                        @if (!string.IsNullOrWhiteSpace(TempData["StatusMessage"] as string))
                        {
                            <!-- everything went ok -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div role="alert" class="alert alert-success alert-dismissible fade show">
                                        @TempData["StatusMessage"]
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                        @* Update has errors *@
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                        {
                            <!-- errors -->
                            @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div role="alert" class="alert alert-warning alert-dismissible fade show">
                                            <span>@error.ErrorMessage</span>
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Username</label>
                                    <input asp-for="Username" type="text" id="input-username" class="form-control" placeholder="Username" readonly="">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Email address</label>
                                    <input asp-for="Email" type="email" id="input-email" class="form-control" placeholder="jesse@example.com">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-first-name">First name</label>
                                    <input asp-for="FirstName" type="text" id="input-first-name" class="form-control" placeholder="First name">
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-last-name">Last name</label>
                                    <input asp-for="LastName" type="text" id="input-last-name" class="form-control" placeholder="Last name">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr class="my-4"/>
                    <!-- Address -->
                    <h6 class="heading-small text-muted mb-4">Contact information</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-address">Address</label>
                                    <input asp-for="Address" id="input-address" class="form-control" placeholder="Home Address" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-city">City</label>
                                    <input asp-for="City" type="text" id="input-city" class="form-control" placeholder="City">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-country">Country</label>
                                    <input asp-for="Country" type="text" id="input-country" class="form-control" placeholder="Country">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-country">Postal code</label>
                                    <input asp-for="PostalCode" type="number" id="input-postal-code" class="form-control" placeholder="Postal code">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-md btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
