@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<!-- Table -->
<div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
        <div class="card bg-secondary shadow border-0">
            <div class="card-body px-lg-5 py-lg-5">
                <div class="text-center text-muted mb-4">
                    <small>Please fill up sign up form</small>
                </div>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" role="form">
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                    {
                        @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <span>@error.ErrorMessage</span>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">×</span>
                                </button>
                            </div>
                        }
                    }

                    @*FirstName*@
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-hat-3"></i>
                                </span>
                            </div>
                            <input asp-for="Input.FirstName" class="form-control" placeholder="First name" type="text" required />
                        </div>
                        <span asp-validation-for="Input.FirstName" class="invalid-feedback" style="display: block"></span>
                    </div>

                    @*LastName*@
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-hat-3"></i>
                                </span>
                            </div>
                            <input asp-for="Input.LastName" class="form-control" placeholder="Last name" type="text" required />
                        </div>
                        <span asp-validation-for="Input.LastName" class="invalid-feedback" style="display: block"></span>
                    </div>

                    @*Email*@
                    <div class="form-group">
                        <div class="input-group input-group-alternative mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-email-83"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Email" class="form-control" placeholder="Email" type="email" required />
                        </div>
                        <span asp-validation-for="Input.Email" class="invalid-feedback" style="display: block"></span>
                    </div>

                    @*Password*@
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-lock-circle-open"></i>
                                </span>
                            </div>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" required />
                        </div>
                        <span asp-validation-for="Input.Password" class="invalid-feedback" style="display: block"></span>
                    </div>

                    @*PasswordConfirm*@
                    <div class="form-group">
                        <div class="input-group input-group-alternative">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="ni ni-lock-circle-open"></i>
                                </span>
                            </div>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm password" type="password" required />
                        </div>
                        <span asp-validation-for="Input.ConfirmPassword" class="invalid-feedback" style="display: block"></span>
                    </div>

                    @*Create button*@
                    <div class="text-center">
                        <button class="btn btn-primary mt-4" type="submit">Create account</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

@section IdentityHeader
{
    <div class="header bg-gradient-primary py-7 py-lg-8 pt-lg-9">
        <div class="separator separator-bottom separator-skew zindex-100">
            <svg x="0" y="0" viewBox="0 0 2560 100" preserveAspectRatio="none" version="1.1" xmlns="http://www.w3.org/2000/svg">
                <polygon class="fill-default" points="2560 0 2560 100 0 100"></polygon>
            </svg>
        </div>
    </div>
}
